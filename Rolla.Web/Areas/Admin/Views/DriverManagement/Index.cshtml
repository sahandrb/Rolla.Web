@using Rolla.Domain.Entities
@using Rolla.Domain.Enums
@model List<ApplicationUser>

@{
    ViewData["Title"] = "مدیریت رانندگان";
}

<div class="container mt-4">
    <h2>لیست رانندگان</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ایمیل</th>
                <th>ماشین</th>
                <th>پلاک</th>
                <th>وضعیت فعلی</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)
            {
                <tr>
                    <td>@driver.Email</td>
                    <td>@driver.CarModel</td>
                    <td>@driver.PlateNumber</td>
                    <td>
                        @if (driver.DriverStatus == DriverStatus.Pending)
                        {
                            <span class="badge bg-warning">در انتظار</span>
                        }
                        else if (driver.DriverStatus == DriverStatus.Approved)
                        {

                            <span class="badge bg-success">تایید شده</span>
                        }
                        else
                        {

                            <span class="badge bg-danger">@driver.DriverStatus</span>
                        }
                    </td>
                    <td>
                        @if (driver.DriverStatus == DriverStatus.Pending)
                        {
                            <form asp-action="Approve" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@driver.Id" />
                                <button class="btn btn-sm btn-success">✅ تایید</button>
                            </form>
                            <form asp-action="Reject" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@driver.Id" />
                                <button class="btn btn-sm btn-danger">❌ رد</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
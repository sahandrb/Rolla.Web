@using System.Security.Claims

@{
    ViewData["Title"] = "درخواست سفر";

    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container-fluid">
    <div id="map" style="height: 85vh; border-radius: 15px;"></div>

    <!-- باکس شناور پایین صفحه -->
    <div class="fixed-bottom p-3 bg-white border-top shadow" style="border-radius: 20px 20px 0 0;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6">
                    <h4 id="price-display" class="text-success fw-bold">0 تومان</h4>
                    <small class="text-muted">قیمت تقریبی</small>
                </div>
                <div class="col-6">
                    <button id="btn-request" class="btn btn-primary w-100 btn-lg" disabled onclick="submitRequest()">
                        درخواست اسنپ
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✅ کدهای HTML چت (باید بیرون از Style باشند) -->
<div id="chatBox" class="card shadow" style="display:none; position:fixed; bottom:100px; right:20px; width:300px; z-index:2000;">
    <div class="card-header bg-primary text-white d-flex justify-content-between">
        <span>💬 چت با راننده</span>
        <button class="btn-close btn-close-white" onclick="toggleChat()"></button>
    </div>
    <div id="chatMessages" class="card-body" style="height:200px; overflow-y:auto; font-size:14px;">
        <!-- پیام‌ها اینجا ظاهر می‌شوند -->
    </div>
    <div class="card-footer p-2">
        <div class="input-group">
            <input type="text" id="chatInput" class="form-control" placeholder="پیام...">
            <button class="btn btn-primary" onclick="sendChatMessage()">ارسال</button>
        </div>
    </div>
</div>

<button id="btn-open-chat" class="btn btn-info rounded-circle shadow" style="display:none; position:fixed; bottom:100px; right:20px; width:60px; height:60px; z-index:1999;" onclick="toggleChat()">💬</button>

<!-- ✅ استایل‌ها -->
<style>
    /* مطمئن شویم نقشه فضا را پر می‌کند */
    #map {
        width: 100%;
        background-color: #eee;
        z-index: 1;
    }

    .fixed-bottom {
        z-index: 1000;
    }
</style>

@section Scripts {
    <script>
        var currentUserId = '@currentUserId';
    </script>
    <script src="~/js/core/map-base.js"></script>
    <script src="~/js/logic/rider-logic.js"></script>
}
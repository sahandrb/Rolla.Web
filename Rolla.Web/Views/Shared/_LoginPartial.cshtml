@using Microsoft.AspNetCore.Identity
@using Rolla.Domain.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // دریافت اطلاعات کامل کاربر از دیتابیس برای دسترسی به WalletBalance
        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item">
            <a class="nav-link text-primary fw-bold" style="cursor:default">
                💰 موجودی: @(user?.WalletBalance.ToString("N0") ?? "0") تومان
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                سلام @(user?.FullName ?? User.Identity?.Name)!
            </a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark border-0">خروج</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">ثبت‌نام</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">ورود</a>
        </li>
    }
</ul>